[package]
authors = ["Thomas Bahn <thomas@thomas-bahn.net>", "Torbj√∏rn Birch Moltu <t.b.moltu@lyse.net>", "Simon Sapin <simon.sapin@exyr.org>"]
description = "ASCII-only equivalents to `char`, `str` and `String`."
documentation = "https://docs.rs/ascii"
license = "Apache-2.0 OR MIT"
name = "ascii"
readme = "README.md"
repository = "https://github.com/tomprogrammer/rust-ascii"
version = "1.1.0"

[dependencies]
serde = { version = "1.0.25", optional = true }
serde_test = { version = "1.0", optional = true }

[features]
default = ["std"]
std = ["alloc"]
alloc = []

[[test]]
name = "tests"
path = "tests.rs"
